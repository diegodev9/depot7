<% if notice || alert %>
  <p class="py-2 px-3 <%= notice.present? ? 'bg-green-50 mb-5 text-green-500' : 'bg-red-50 mb-5 text-red-500' %> font-medium rounded-lg inline-block" id=<%= notice.present? ? "notice" : "alert" %>>
    <%= notice || alert %>
  </p>
<% else %>
  <div id="notice"></div>
<% end %>